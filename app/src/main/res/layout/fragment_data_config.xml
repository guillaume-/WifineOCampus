<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.neocampus.wifishared.fragments.FragmentTraffic">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:text="Consommation des donnÃ©es "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:typeface="serif"
                android:background="@drawable/cu_solid_bottom_border"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cu_solid_bottom_border">

                <Switch
                    android:text="Notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch1"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:typeface="serif"
                    android:switchTextAppearance="@style/SwitchTextAppearance"
                    android:textColor="?android:attr/textColorTertiary"
                    android:thumb="@drawable/cu_switch_thumb_selector"
                    android:track="@drawable/cu_switch_track_bg"
                    android:showText="true"
                    android:textOff="Non"
                    android:textOn="Oui"
                    android:thumbTextPadding="10dp"
                    android:layout_marginBottom="10dp" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp">

            <com.neocampus.wifishared.views.DataSurfaceView
                android:layout_width="match_parent"
                android:id="@+id/data_configuration"
                android:layout_height="match_parent" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:id="@+id/data_scroll"
                android:scrollbars="none"
                android:fadeScrollbars="false">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.neocampus.wifishared.views.EchelleSurfaceView
                        android:layout_width="match_parent"
                        android:layout_height="2500dp"
                        android:id="@+id/echelle_surface" />
                </LinearLayout>


            </ScrollView>
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp">

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
